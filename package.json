{
  "name": "@jojojoseph/toon-json-converter",
  "version": "2.0.2",
  "description": "A lightweight, efficient library for converting between JSON and TOON (Token-Oriented Object Notation) formats, optimized for LLM token usage",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build && npm test",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "example:quick": "npm run build && npx ts-node examples/quick-start.ts",
    "example:comprehensive": "npm run build && npx ts-node examples/comprehensive-sample.ts",
    "example:nodejs": "npm run build && npx ts-node examples/nodejs-app-example.ts",
    "example:basic": "npm run build && npx ts-node examples/basic-usage.ts",
    "examples": "npm run example:quick"
  },
  "keywords": [
    "json",
    "toon",
    "@toon/toon2json",
    "@toon",
    "toon2json",
    "llm",
    "token-optimization",
    "serialization",
    "data-format",
    "ai",
    "converter",
    "parser"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheJojoJoseph/json-toon-converter.git"
  },
  "bugs": {
    "url": "https://github.com/TheJojoJoseph/json-toon-converter/issues"
  },
  "homepage": "https://github.com/TheJojoJoseph/json-toon-converter#readme",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.1",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=14.0.0"
  }
}
